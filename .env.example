# Discord Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Discord Bot Token (get from https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Required: Your Discord User ID (enable Developer Mode in Discord, right-click your profile, Copy ID)
DISCORD_OWNER_ID=your_discord_user_id_here

# API Keys (you need at least one of these):

# GPT4All API Key (recommended - free tier available)
# Get from: https://gpt4all.io/
GPT4ALL_API_KEY=your_gpt4all_api_key_here

# OpenAI/OpenRouter API Key (alternative)
# Get from: https://openrouter.ai/ or https://platform.openai.com/
OPENAI_API_KEY=your_openai_or_openrouter_key_here

# Google AI Studio API Key (alternative)
# Get from: https://aistudio.google.com/
GOOGLE_AI_KEY=your_google_ai_key_here

# Cerebras API Key (alternative)
# Get from: https://cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# SamuraiAPI Key (alternative)
# Get from: https://samuraiapi.in/
SAMURAI_API_KEY=your_samurai_api_key_here

# Optional: Set to true for debug mode
DEBUG_MODE=false